<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="CONTENT_LOG"
        app:layout_constraintLeft_toRightOf="@id/buttonPhoneStatesLog"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/buttonContentLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="MY LOG TEXT"
        android:id="@+id/buttonPhoneStatesLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@id/buttonContentLog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttonContentLog"
        app:layout_constraintBottom_toBottomOf="@id/buttonContentLog"/>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/buttonPhoneStatesLog"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>